DATABASE_URL=sqlite:///./ecotrack_ghana.db
# For PostgreSQL: postgresql://username:password@localhost/ecotrack_ghana

JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# File upload settings
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Environment
ENVIRONMENT=development

# CORS settings (comma-separated for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,exp://192.168.1.100:8081
